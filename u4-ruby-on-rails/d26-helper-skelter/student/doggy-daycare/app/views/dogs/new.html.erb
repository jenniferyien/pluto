<h1> Please Register Your Dog</h1>
<ul>
<% @dog.errors.each do |field, error| %>
<li> <%= field.to_s.humanize %> <%= error %></li>
<% end %>
</ul>
<form action= '/dogs' method= 'post'>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
  <div class='field'>
      <label for='dog_name'>Dog's Name:</label>
      <input type="text" id='dog_name' name='dog[name]' value= '<%= @dog.name %>'>
  </div>
  <div class='field'>
      <label for='dog_age_months'>Dog's Age:</label>
      <input type="number" id='dog_age_months' name='dog[age_months]' min='0' step='0.5'>
  </div>
  <%# <!-- <div class='field'>
      <label for='dog_breed'>Dog's Breed:</label>
      <select id='dog_breed' name='dog[breed]'>
        <option value='Pinscher'>Pinscher</option>
        <option value='Terrier'>Terrier</option>
        <option value='Dachshund'>Dachshund</option>
        <option value='Retreiver'>Retreiver</option>
        <option value='Poodle'>Poodle</option>
        <option value='Toy'>Toy</option>
        <option value='Portuguese Water Dog'>Portuguese Water Dog</option>
        <option value='Other'>Other</option>
      </select>
  </div> --> %>
  <div class='field'>
      <label for='dog_breed'>Dog's Breed:</label>
       <%= select_tag "dog[breed]", options_for_select(Dog::BREED), id: 'dog_breed'%>
   </div>
  <div class='field'>
      <label for='dog_color'>Dog's Color:</label>
      <input type="text" id='dog_color' name='dog[color]'>
  </div>
  <div class='field'>
      <label for='dog_tagged'>Tagged?:</label>
      <input type="checkbox" id='dog_tagged' name='dog[tagged]'>
  </div>
  <input type = 'submit'>
</form>
